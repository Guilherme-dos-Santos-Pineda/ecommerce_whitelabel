              "raw": "{{base_url}}/clients/domain/devnology.com",
              "host": ["{{base_url}}"],
              "path": ["clients", "domain", "devnology.com"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "üì¶ Products",
      "description": "Endpoints para gerenciamento de produtos",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-client-domain",
                "value": "devnology.com"
              }
            ],
            "url": {
              "raw": "{{base_url}}/products",
              "host": ["{{base_url}}"],
              "path": ["products"]
            }
          },
          "response": []
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-client-domain",
                "value": "devnology.com"
              }
            ],
            "url": {
              "raw": "{{base_url}}/products/1",
              "host": ["{{base_url}}"],
              "path": ["products", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Search Products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-client-domain", 
                "value": "devnology.com"
              }
            ],
            "url": {
              "raw": "{{base_url}}/products?search=shirt",
              "host": ["{{base_url}}"],
              "path": ["products"],
              "query": [
                {
                  "key": "search",
