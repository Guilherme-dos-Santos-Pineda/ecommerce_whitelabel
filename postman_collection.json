              }
            ],
            "url": {
              "raw": "{{base_url}}/products?search=shirt&category=clothing&provider=brazilian&minPrice=50&maxPrice=200",
              "host": ["{{base_url}}"],
              "path": ["products"],
              "query": [
                {
                  "key": "search",
                  "value": "shirt"
                },
                {
                  "key": "category",
                  "value": "clothing"
                },
                {
                  "key": "provider",
                  "value": "brazilian"
                },
                {
                  "key": "minPrice",
                  "value": "50"
                },
                {
                  "key": "maxPrice",
                  "value": "200"
                }
              ]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "description": "URL base da API"
    },
    {
      "key": "token",
      "value": "seu_jwt_token_aqui",
      "description": "Token JWT para autentica√ß√£o (obtido no login)"
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "console.log('Iniciando requisi√ß√£o para: ' + pm.request.url);"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "pm.test(\"Status code is 200\", function () {",
          "    pm.response.to.have.status(200);",
          "});",
          "",
          "// Salvar token automaticamente no login",
          "if (pm.response.code === 200 && pm.request.url.toString().includes('/auth/login')) {",
          "    var jsonData = pm.response.json();",
          "    if (jsonData.token) {",
          "        pm.collectionVariables.set(\"token\", jsonData.token);",
          "        console.log(\"Token salvo: \" + jsonData.token);",
          "    }",
          "}"
        ]
      }
    }
  ]
}