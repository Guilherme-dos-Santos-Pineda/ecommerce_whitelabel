        },
        {
          "name": "Get Products Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-client-domain",
                "value": "devnology.com"
              }
            ],
            "url": {
              "raw": "{{base_url}}/products/stats",
              "host": ["{{base_url}}"],
