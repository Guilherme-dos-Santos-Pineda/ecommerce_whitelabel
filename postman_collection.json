              {
                "key": "x-client-domain",
                "value": "devnology.com"
              }
            ],
            "url": {
              "raw": "{{base_url}}/products/provider/brazilian",
              "host": ["{{base_url}}"],
              "path": ["products", "provider", "brazilian"]
            }
          },
          "response": []
        },
        {
          "name": "Get Categories",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-client-domain",
                "value": "devnology.com"
              }
            ],
            "url": {
              "raw": "{{base_url}}/products/categories",
              "host": ["{{base_url}}"],
